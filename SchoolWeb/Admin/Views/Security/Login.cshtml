@model Admin.Models.User
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/css/User.css" rel="stylesheet" />
</head>
<body id="LoginForm">
    <div class="container">
        @using (Html.BeginForm("Login", "Security", FormMethod.Post))
        {
            <div class="login-form">
                <div class="main-div">
                    <div class="panel">
                        <h2>Giriş</h2>
                        <p>Zəhmət olmasa email və şifrənizi daxil edin</p>
                        <p style="color:red;">@ViewBag.message</p>
                    </div>
                    <div class="form-group">
                        @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", @placeholder = "İstifadəçi adı" })
                        @*<input type="email" class="form-control" id="inputEmail" placeholder="Email Address">*@
                    </div>
                    <div class="form-group">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Şifrə" })
                        @*<input type="password" class="form-control" id="inputPassword" placeholder="Password">*@
                    </div>
                    <div class="forgot">
                        <a href="#">Şifrənizi unutdunuz?</a>
                    </div>
                    <button type="submit" class="btn btn-primary">Daxil ol</button>
                </div>
            </div>
        }
    </div>
</body>
</html>
