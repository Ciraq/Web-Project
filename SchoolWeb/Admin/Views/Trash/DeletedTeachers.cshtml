@model List<Admin.Models.Teacher>
<div class="content container-fluid">
    <div class="row">
        <div class="col-sm-12">
            <h1>Teachers</h1>
            <table id="teacher" class="display table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>İD</th>
                        <th>Ad</th>
                        <th>Soyad</th>
                        <th>Doğum Günü</th>
                        <th>Ünvan</th>
                        <th>Maaş</th>
                        <th>Fənn</th>
                        <th>Şəkil</th>
                        <th></th>
                    </tr>
                </thead>

                <tfoot>
                    <tr>
                        <th>İD</th>
                        <th>Ad</th>
                        <th>Soyad</th>
                        <th>Doğum Günü</th>
                        <th>Ünvan</th>
                        <th>Maaş</th>
                        <th>Fənn</th>
                        <th>Şəkil</th>
                        <th></th>
                    </tr>
                </tfoot>

                <tbody>
                    @foreach (var teacher in Model)
                    {
                        <tr>
                            <td>@teacher.ID</td>
                            <td>@teacher.Name</td>
                            <td>@teacher.Surname</td>
                            <td>@teacher.DateOfBirth.ToShortDateString()</td>
                            <td>@teacher.Address</td>
                            <td>@teacher.Salary</td>
                            <td>@teacher.Subject</td>
                            <td>
                                @{
                                    var base64 = Convert.ToBase64String(teacher.Image);
                                    var imgsrc = String.Format("data:image/png;base64,{0}", base64);
                                }
                                <img src="@imgsrc" width="55" height="55" style="margin-left:20px;" />
                            </td>
                            <td>
                                <a href="@Url.Action("RecoverTeachers","Trash",new {id=teacher.ID })" class="btn btn-primary btn-sm" style="color:white"><i class="fa fa-undo fa-sm"></i></a>
                                <a data-id="@teacher.ID" class="btn btn-danger btn-sm js-delete" style="color:white"><i class="fa fa-trash fa-sm"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
