@model List<Admin.Models.Mark>
<div class="content container-fluid">
    <div class="row">
        <div class="col-sm-12">
            <h1>Marks</h1>
            <table id="mark" class="table table-striped table-bordered" style="font-size:13px;">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Azerbaijani</th>
                        <th>Biology</th>
                        <th>Chemistry</th>
                        <th>English</th>
                        <th>Math</th>
                        <th>Geography</th>
                        <th>History</th>
                        <th>Informatics</th>
                        <th>Physics</th>
                        <th>Literature</th>
                        <th>Semester</th>
                        <th>Result</th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>

                <tfoot>
                    <tr>
                        <th>ID</th>
                        <th>Azerbaijani</th>
                        <th>Biology</th>
                        <th>Chemistry</th>
                        <th>English</th>
                        <th>Math</th>
                        <th>Geography</th>
                        <th>History</th>
                        <th>Informatics</th>
                        <th>Physics</th>
                        <th>Literature</th>
                        <th>Semester</th>
                        <th>Result</th>
                        <th></th>
                        <th></th>
                    </tr>
                </tfoot>

                <tbody>
                    @foreach (var mark in Model)
                    {
                        <tr>
                            <td>@mark.Student.ID</td>
                            <td>@mark.Azerbaijani</td>
                            <td>@mark.Biology</td>
                            <td>@mark.Chemistry</td>
                            <td>@mark.English</td>
                            <td>@mark.Math</td>
                            <td>@mark.Geography</td>
                            <td>@mark.History</td>
                            <td>@mark.Informatics</td>
                            <td>@mark.Physics</td>
                            <td>@mark.Literature</td>
                            <td>@mark.Semester</td>
                            <td>@mark.Result</td>
                            <td>
                                <a href="@Url.Action("RecoverMarks","Trash",new {id=mark.ID })" class="btn btn-primary btn-sm" style="color:white"><i class="fa fa-undo fa-sm"></i></a>
                            </td>
                            <td>
                                <a data-id="@mark.ID" class="btn btn-danger btn-sm js-delete" style="color:white"><i class="fa fa-trash fa-sm"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
